@model ELIS_MVC_Core.Models.Partecipanti

@{
    ViewData["Title"] = "NuovoPartecipante";
}

@section Scripts{
    <script>
        $(function(){
            $("#btnPost").click(function(){
                var record = {
                    "idpartecipante" : $("#Idpartecipante").val(),
                    "nome": $("#Nome").val(),
                    "cognome": $("#Cognome").val(),
                    "dataNascita": $("#DataNascita").val(),
                    "residenza": $("#Residenza").val(),
                    "titoloStudio": $("#TitoloStudio").val(),
                }
                console.log(record.dataNascita)
                $.ajax({
                    url: "http://localhost:5279/api/Partecipantis",
                    type: "POST",
                    dataType: "JSON",
                    contentType: "application/json",
                    data: JSON.stringify(record)
                }).done(function(data){
                    window.location.href = "ElencoPartecipanti"
                })
               
            });
        });
    </script>
}

<div class="d-flex align-items-center justify-content-between">
    <h1>Nuovo Partecipante</h1>
    <div>
        <a asp-action="ElencoPartecipanti" class="text-light">
            <button class="btn btn-success rounded-circle">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
        </a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NuovoPartecipante">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idpartecipante" class="control-label"></label>
                <input asp-for="Idpartecipante" class="form-control" value="@ViewBag.NuovoId" />
                <span asp-validation-for="Idpartecipante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascita" class="control-label">Data di nascita</label>
                <input asp-for="DataNascita" type="date" class="form-control" />
                <span asp-validation-for="DataNascita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Residenza" class="control-label"></label>
                <input asp-for="Residenza" class="form-control" />
                <span asp-validation-for="Residenza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitoloStudio" class="control-label">Titolo di studio</label>
                <input asp-for="TitoloStudio" class="form-control" />
                <span asp-validation-for="TitoloStudio" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="button" id="btnPost" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



