
<!--istruzione razor-->
@{
	ViewData["Title"] = "View01";
}

<h1>View01</h1>
<h2>Ciao sono una view</h2>
<ul>
	<li>Roma</li>
	<li>Milano</li>
	<li>Napoli</li>
</ul>

<!--per scrivere codice back-end in una pagina html devo usare un istruzione razor-->
<ul>
	@for (int i = 0; i < 10; i++)
	{
			<li>@i</li>
	}
</ul>
<p>Oggi è: @DateTime.Now.ToLongDateString()</p>
<p>e sono le ore: @DateTime.Now.ToLongTimeString()</p>


