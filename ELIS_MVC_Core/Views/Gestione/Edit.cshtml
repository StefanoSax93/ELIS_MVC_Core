
@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica</h1>

<form method="post">
	<div class="container">
		<div class="row my-3">
		   <div class="col">
			   Nome:
		   </div>
		   <div class="col">
			   <input type="text" name="nome" value="@Model.Nome"/>
		   </div>
		</div>

		<div class="row my-3">
		   <div class="col">
			   Cognome:
		   </div>
		   <div class="col">
			   <input type="text" name="cognome" value="@Model.Cognome"/>
		   </div>
		</div>

		<div class="row my-3">
		   <div class="col">
			   Data di Nascita:
		   </div>
		   <div class="col">
			   <input type="date" name="data" value="@Model.DataNascita.ToString("yyyy-MM-dd")"/>
		   </div>
		</div>

		<div class="row my-3">
		   <div class="col">
			   Città di residenza:
		   </div>
		   <div class="col">
			   <input type="text" name="residenza" value="@Model.Residenza"/>
		   </div>
		</div>

		<div class="row my-3">
		   <div class="col">
			   Titolo di studio:
		   </div>
		   <div class="col">
			   <input type="text" name="studio" value="@Model.TitoloStudio"/>
		   </div>
		</div>

		<div class="row">
		   <div class="col">

		   </div>
		   <div class="col">
			   <input class="btn btn-success" type="submit" value="Salva" />
		   </div>
		</div>
	</div>
</form>

